@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout.cshtml";
    var PersonList = (List<KeyValuePair<int,string>>)ViewBag.PersonList;
    var ClassList = (List<KeyValuePair<int, string>>)ViewBag.ClassList;
}

<h2>Yeni Öğrenci Oluştur</h2>

@using (Html.BeginForm())
{


<div class="form-horizontal">
    <h4>Öğrenci Ekle</h4>
    <hr />

    <input type="hidden" name="PersonId" value="1" />
    <div class="form-group">
        <label>Kişi</label>
        <div class="col-md-10">
            <select name="PersonId">
                @foreach (var person in PersonList)
                {
                    <option value="@person.Key">@person.Value</option>
                }
            </select>
        </div>
    </div>

    <input type="hidden" name="ClassId" value="1" />
    <div class="form-group">
        <label>Sınıf</label>
        <div class="col-md-10">
            <select name="ClassId">
                @foreach (var _class in ClassList)
                {
                    <option value="@_class.Key">@_class.Value</option>
                }
            </select>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Ekle</button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>